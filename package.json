{
  "type": "module",
  "name": "scraper-provas",
  "version": "1.0.0",
  "description": "Scraper de provas de concursos",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsup-node src --clean --out-dir dist",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "vitest run -c vitest.unit.config.ts",
    "test:watch": "vitest -c vitest.unit.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run -c vitest.e2e.config.ts",
    "test:e2e:watch": "vitest -c vitest.e2e.config.ts",
    "test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-environment": "npm link vitest-environment-prisma",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "scraper",
    "concursos",
    "provas"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@types/pdf-parse": "^1.1.5",
    "@types/pg": "^8.15.6",
    "prisma": "^7.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "axios": "^1.6.0",
    "axios-retry": "^4.0.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "p-limit": "^5.0.0",
    "pdf-parse": "^2.4.5",
    "pg": "^8.16.3",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.1.13"
  }
}
